generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id          String   @id @default(uuid())
  title       String
  description String?
  link        String   @unique
  publishedAt DateTime?
  processed   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Headlines {
  id          String   @id @default(uuid())
  headline    String
  description String
  date        DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}