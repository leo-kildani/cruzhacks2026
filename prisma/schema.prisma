generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id          String   @id @default(uuid())
  title       String
  description String?
  link        String   @unique
  publishedAt DateTime?
  processed   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Headlines {
  id          String   @id @default(uuid())
  headline    String
  description String
  date        DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  publicOpinion    Public_Opinion?
  headlineSources  HeadlineSource[]
}

model HeadlineSource {
  id            String    @id @default(uuid())
  headlineId    String
  headline      Headlines @relation(fields: [headlineId], references: [id], onDelete: Cascade)

  url           String
  title         String
  source        String    // domain name (e.g., "bbc.com")
  biasRating    String    // left, left-center, center, right-center, right, unknown
  biasAnalysis  String?   @db.Text
  excerpt       String?   @db.Text
  publishedDate DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([headlineId])
}