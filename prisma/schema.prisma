generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id          String    @id @default(uuid())
  title       String
  description String?
  link        String    @unique
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  processed   Boolean   @default(false)
}

model Headlines {
  id            String           @id @default(uuid())
  headline      String
  description   String
  date          DateTime
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  publicOpinion Public_Opinion?
  headlineSources  HeadlineSource[]

}

model HeadlineSource {
  id            String    @id @default(uuid())
  headlineId    String
  url           String
  title         String
  source        String
  biasRating    String
  biasAnalysis  String?
  excerpt       String?
  publishedDate DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  headline      Headlines @relation(fields: [headlineId], references: [id], onDelete: Cascade)

  @@index([headlineId])
}

model Public_Opinion {
  id              String    @id @default(uuid())
  summary         String
  totalComments   Int
  videosProcessed Int
  headlineId      String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  headline        Headlines @relation(fields: [headlineId], references: [id], onDelete: Cascade)
}
